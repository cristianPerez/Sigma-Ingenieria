<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.qualitysolutions.supervision.E_asignar_operarios">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue1"
            android:text="@string/date_example"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <DigitalClock
            android:id="@+id/clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateNow"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dateNow"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="logOut"
            android:src="@mipmap/btn_logout"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/RelativeLayout1"
        android:id="@+id/adicionar_operario"
        android:weightSum="1">

        <Button
           style="@style/buttons"
            android:text="Agregar Operario"
            android:background="@color/blue2"
            android:onClick="agregarOperarios"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>


        <Button
            style="@style/buttons"
            android:text="ayuda"
            android:background="@color/blue1"
            android:onClick="quitarOperarios"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewOperariosSeleccionados"
        android:layout_below="@+id/adicionar_operario"
        android:layout_above="@+id/linearLayout2"
        android:clickable="false" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout2">

        <Button
            style="@style/buttons"
            android:text="Atras"
            android:id="@+id/Atras"
            android:background="@color/btn5"
            android:layout_weight="1"
            android:onClick="back"/>

        <Button
            style="@style/buttons"
            android:text="Guardar"
            android:id="@+id/Guardar"
            android:background="@color/btn6"
            android:layout_weight="1"
            android:onClick="guardarOperariosSeleccionados"
            />
    </LinearLayout>


</RelativeLayout>
