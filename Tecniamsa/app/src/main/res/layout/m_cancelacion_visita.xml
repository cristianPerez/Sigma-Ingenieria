<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.qualitysolutions.tecniamsa.M_CancelacionVisita"
    >
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue1"
            android:text="@string/date_example"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextClock
            android:id="@+id/clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateNow"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dateNow"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_Logout"
            android:layout_width="80dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/logout_conten_description"
            android:onClick="logOut"
            android:src="@mipmap/btn_logout" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/RelativeLayout1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Seleccione la solicitud"
                android:id="@+id/textView16"
                android:gravity="center_horizontal"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerClientes"
                android:layout_below="@+id/textView16"
                android:layout_alignParentEnd="true"/>


            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="No se puede ejecutar la visita"
                android:id="@+id/checkBox"
                android:layout_below="@+id/spinnerClientes"/>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Causales de no recolección"
                android:id="@+id/textView17"
                android:layout_below="@+id/checkBox"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCausalesNoRecoleccion"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true"
                android:entries="@array/arraySalesforce"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Observaciones del logístico"
                android:id="@+id/textView18"
                android:layout_below="@+id/spinnerCausalesNoRecoleccion"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/edtObservacionLogistico"
                android:layout_below="@+id/textView18"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                />



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Observaciones de la cancelación"
                android:id="@+id/textView19"
                android:layout_below="@+id/edtObservacionLogistico"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/edtObservacionCancelacion"
                android:layout_below="@+id/textView19"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/button5"
                android:layout_below="@+id/edtObservacionCancelacion"
                android:layout_centerHorizontal="true"
                android:background="@color/btn2"
                android:textColor="@color/white"/>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>
